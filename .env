# Circle Developer-Controlled Wallets Configuration
# Get your API key from https://console.circle.com/

# Circle API credentials
CIRCLE_API_KEY=your_circle_api_key_here
CIRCLE_ENTITY_SECRET=your_entity_secret_here

# Service configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
SERVICE_ENV=development

# Blockchain network configuration
# Supported networks: ARC-TESTNET, ARC-MAINNET, MATIC-AMOY, MATIC-MAINNET, ARB-SEPOLIA, ETH-SEPOLIA, etc.
DEFAULT_BLOCKCHAIN=ARC-TESTNET
SUPPORTED_BLOCKCHAINS=ARC-TESTNET,MATIC-AMOY,ARB-SEPOLIA

# Backend API integration
BACKEND_API_URL=http://localhost:8080
BACKEND_API_KEY=your_backend_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
ENABLE_REQUEST_VALIDATION=true
MAX_WALLET_OPERATIONS_PER_MINUTE=10

# Database (if wallet service needs to cache data)
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# Optional: Transaction monitoring
ENABLE_TRANSACTION_MONITORING=true
TRANSACTION_CHECK_INTERVAL_SECONDS=30
